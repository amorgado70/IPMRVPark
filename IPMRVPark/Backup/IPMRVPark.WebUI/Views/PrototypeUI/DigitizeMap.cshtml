@{
    ViewBag.Title = "Digitize Map";
    ViewBag.PageTitle = "Digitize IPM Event Map";
}

@Html.ActionLink("Home", "Menu", "PrototypeUI")
<span class="glyphicon glyphicon-chevron-right"></span>
@Html.ActionLink("Digitize IPM Event Map", "DigitizeMap", "PrototypeUI")

<!-- New Reservation-->
<div class="container-fluid">
    <!-- IPM Event-->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <label>IPM Event Year</label>
            </div>
            <div class="col-sm-2 col-xs-6 form-top-margin">
                <select class="form-control" data-toggle="tooltip" title="Select">
                    @for (int i = 0; i < 8; i++)
                    {
                        <option>@(2015 + i)</option>
                    }
                </select>
            </div>
            <div class="col-sm-5 col-sm-push-2 col-xs-12 form-top-margin" data-toggle="tooltip" title="Go To">
                <a href="@Url.Action("IPMEventInfo", "PrototypeUI")" class="btn btn-block btn-default btn-mylink pagination-centered">
                    <span class="glyphicon glyphicon-map-marker"></span>
                    <span>IPM Event Info & Rates</span>
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>
    </div>
    <!-- Select File -->
    <div class="row">
        <div class="col-sm-6 col-xs-12 top-margin">
            <button class="btn btn-block btn-default">
                <span class="col-xs-1"></span>
                <span class="col-xs-9">Select KML File</span>
            </button>
        </div>
        <div class="col-xs-6 top-margin">
            <input type="text" class="form-control" placeholder="F:\MapRev2.KML (Selected File)" disable />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-push-6 col-xs-12 top-margin">
            <button class="btn btn-block btn-default">
                <span class="col-xs-1 glyphicon glyphicon-transfer"></span>
                <span class="col-xs-9">Transfer Data From KML File</span>
            </button>
        </div>
    </div>
    <!-- Results From Transfer Operation -->
    <div class="row top-margin">
        <div class="col-sm-8 col-xs-12 form-top-margin">
            <span class="col-xs-1 glyphicon glyphicon-list"></span>
            <b>Results From Transfer Data</b>
        </div>
        <div class="col-xs-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Style Url</th>
                        <th style="text-align:center;">Number Of Sites</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><div style="background-color: #00ff55; margin:1px; padding: 5px; border-radius:5px; height:2.5em; width:10em;">#PolyStyle01024</div></td>
                        <td style="text-align:center;">782</td>
                    </tr>
                    <tr>
                        <td><div style="background-color: #7af5f5; margin:1px; padding: 5px; border-radius:5px; height:2.5em; width:10em;">#PolyStyle0992</div></td>
                        <td style="text-align:center;">420</td>
                    </tr>
                    <tr>
                        <td><div style="color:white;background-color: purple; margin:1px; padding: 5px; border-radius:5px; height:2.5em; width:10em;">#PolyStyle0080</div></td>
                        <td style="text-align:center;">20</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Match site types with KML styles -->
    <div class="row top-margin">
        <div class="col-sm-8 col-xs-12 form-top-margin">
            <span class="col-xs-1 glyphicon glyphicon-link"></span>
            <b>Match KML Style Url and IPM Event Site Types</b>
        </div>
    </div>
    <div class="row form-top-margin">
        <div class="col-xs-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>KML Style Url</th>
                        <th>IPM Event Site Type</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><div style="background-color: #00ff55; margin:1px; padding: 5px; border-radius:5px; height:2.5em; width:10em;">#PolyStyle01024</div></td>
                        <td>
                            <select class="form-control" data-toggle="tooltip" title="Filter, search and select">
                                <option>25x40 unserviced</option>
                                <option>25x40 30 amps lots</option>
                                <option>25x40 15 amps lots</option>
                                <option>30x45 15 amps lots</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><div style="background-color: #7af5f5; margin:1px; padding: 5px; border-radius:5px; height:2.5em; width:10em;">#PolyStyle0992</div></td>
                        <td>
                            <select class="form-control" data-toggle="tooltip" title="Filter, search and select">
                                <option>25x40 unserviced</option>
                                <option>30x45 15 amps lots</option>
                                <option>25x40 30 amps lots</option>
                                <option>25x40 15 amps lots</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><div style="color:white;background-color: purple; margin:1px; padding: 5px; border-radius:5px; height:2.5em; width:10em;">#PolyStyle0080</div></td>
                        <td>
                            <select class="form-control" data-toggle="tooltip" title="Filter, search and select">
                                <option></option>
                                <option>30x45 15 amps lots</option>
                                <option>25x40 unserviced</option>
                                <option>25x40 30 amps lots</option>
                                <option>25x40 15 amps lots</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row" style="color:red; font-weight:bold;">
        <div class="col-sm-6 col-sm-push-6 col-xs-12">
            Matching Errors: <br />
            <ul>
                <li>At least one Style Url left undefined</li>
                <li>Two Style Url linked to same Site Type</li>
            </ul>
        </div>
    </div>
    <div class="row top-margin">
        <div class="col-sm-6 col-sm-push-6 col-xs-12">
            <button class="btn btn-block btn-default">
                <span class="col-xs-1 glyphicon glyphicon-ok"></span>
                <span class="col-xs-9">Confirm Match</span>
            </button>
        </div>
    </div>
    <!-- Build Map-->
    <div class="row">
        <div class="col-sm-6 col-sm-push-6 col-xs-12 top-margin" data-toggle="tooltip" title="Go To">
            <a href="@Url.Action("IPMEventMap", "PrototypeUI")" class="btn btn-block btn-default btn-mylink pagination-centered">
                <span class="col-xs-1 glyphicon glyphicon-picture"></span>
                <span class="col-xs-9">Build & Show Map</span>
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</div>
