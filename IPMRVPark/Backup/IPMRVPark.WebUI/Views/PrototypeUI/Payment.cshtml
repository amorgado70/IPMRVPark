@{
    ViewBag.Title = "Payments & Refunds";
    ViewBag.PageTitle = "New Payment";
}

@Html.ActionLink("Home", "Menu", "PrototypeUI")
<span class="glyphicon glyphicon-chevron-right"></span>
Payments & Refunds
<span class="glyphicon glyphicon-chevron-right"></span>
@Html.ActionLink("New Payment", "Payment", "PrototypeUI")

<!-- New Payment -->
<div class="container-fluid">
    <!-- Customer -->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <label>
                    <span class="col-xs-2 glyphicon glyphicon-search"></span>
                    <span class="col-xs-9">By Name</span>
                </label>
            </div>
            <div class="col-sm-5 col-xs-12 form-top-margin" data-toggle="tooltip" title="Filter, search and select">
                <select class="form-control">
                    <option>Customer Full Name</option>
                    <option>All Names - No Filter</option>
                    @for (int i = 0; i < 8; i++)
                    {
                        <option>Mary Denver Holtz @i</option>
                    }
                </select>
            </div>
            <div class="col-sm-1 col-xs-12 form-top-margin">
                <label>Phone</label>
            </div>
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <input type="text" class="form-control" placeholder="(519) 888-3333">
            </div>
        </div>
    </div>
    <!-- List of previous payments from this customer -->
    <div class="row top-margin">
        <div class="col-sm-6 col-sm-push-6 col-xs-12" data-toggle="tooltip" title="Click To Expand/Collapse">
            <button class="btn btn-block btn-default" data-toggle="collapse" data-target="#accountCustomer">
                <span class="col-xs-1 glyphicon glyphicon-list"></span>
                <span class="col-xs-9">List Previous Payments &nbsp;<span class="caret"></span></span>
            </button>
        </div>
    </div>
    <div id="accountCustomer" class="col-xs-12 collapse">
        <table class="table">
            <thead>
                <tr>
                    <th>Site</th>
                    <th>Reason For Payment</th>
                    <th>Date</th>
                    <th style="text-align:right;">Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>A-21</td>
                    <td>New reservation</td>
                    <td>02/05/2016</td>
                    <td style="text-align:right;">$ 5,420.</td>
                </tr>
            </tbody>
        </table>
    </div>
    <!-- List of sites -->
    <div class="row top-margin" data-toggle="tooltip" title="List Of Sites Reserved or Selected For This Customer">
        <div class="col-sm-8 col-xs-12 form-top-margin">
            <span class="col-xs-1 glyphicon glyphicon-list"></span>
            <b>All Sites For This Customer</b>
        </div>
        <div class="col-sm-4 col-xs-12 form-top-margin">
            <button class="btn btn-block btn-default">
                <span class="col-xs-1 glyphicon glyphicon-refresh"></span>
                <span class="col-xs-9">Refresh List</span>
            </button>
        </div>
    </div>
    <div class="col-xs-12">
        <div class="col-xs-12">
            <table class="table">
                <thead>
                    <tr>
                        <th><input type="checkbox" checked></th>
                        <th>Site</th>
                        <th>Arrival</th>
                        <th style="text-align:right;">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr style="color:gray">
                        <td class="glyphicon glyphicon-tag"></td>
                        <td>A-21</td>
                        <td>160101</td>
                        <td style="text-align:right;">
                            5,420.<br />
                            already<br />
                            reserved
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4" style="border-top:none">
                            <div class="dropdown pull-right">
                                <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
                                    Action
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="#"><span class="glyphicon glyphicon-info-sign"></span>&nbsp; See Reservation Details</a></li>
                                    <li><a href="#"><span class="glyphicon glyphicon-pencil"></span>&nbsp; Edit Reservation</a></li>
                                    <li><a href="#"><span class="glyphicon glyphicon-erase"></span>&nbsp; Cancel Reservation</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" checked></td>
                        <td>A-22</td>
                        <td>160221</td>
                        <td style="font-weight:bold; text-align:right;">3,045.</td>
                    </tr>
                    <tr>
                        <td colspan="4" style="border-top:none">
                            <div class="dropdown pull-right">
                                <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
                                    Action
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="#"><span class="glyphicon glyphicon-info-sign"></span>&nbsp; See Reservation Details</a></li>
                                    <li><a href="#"><span class="glyphicon glyphicon-pencil"></span>&nbsp; Edit Reservation</a></li>
                                    <li><a href="#"><span class="glyphicon glyphicon-erase"></span>&nbsp; Cancel Reservation</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><input type="checkbox" checked></td>
                        <td>A-23</td>
                        <td>160221</td>
                        <td style="font-weight:bold; text-align:right;">3,045.</td>
                    </tr>
                    <tr>
                        <td colspan="4" style="border-top:none">
                            <div class="dropdown pull-right">
                                <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
                                    Action
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="#"><span class="glyphicon glyphicon-info-sign"></span>&nbsp; See Reservation Details</a></li>
                                    <li><a href="#"><span class="glyphicon glyphicon-pencil"></span>&nbsp; Edit Reservation</a></li>
                                    <li><a href="#"><span class="glyphicon glyphicon-erase"></span>&nbsp; Cancel Reservation</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Payment for this reservations -->
    <div class="row top-margin">
        <div class="col-xs-12 form-top-margin">
            <b>Payment For Selected Sites</b>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <label>(a) Total</label>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <input type="text" min="0.00" step="any" class="form-control" placeholder="CAD$ 6,090." style="text-align:right;" disabled>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <label>(b) Payment</label>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <input type="text" min="0.00" step="any" class="form-control" placeholder="CAD$ 6,090." style="text-align:right; border: 2px solid black;">
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <label>(c)=(a)-(b) Due</label>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <input type="text" min="0.00" step="any" class="form-control" placeholder="CAD$ 0." style="text-align:right;" disabled>
        </div>
    </div>
    <!--Customer's Balance-->
    <div class="row form-top-margin">
        <div class="col-xs-12 form-top-margin">
            <b>Customer's Account Balance</b>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <label>(d) Before Payment</label>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <input type="text" min="0.00" step="any" class="form-control" placeholder="CAD$ 0." style="text-align:right;" disabled>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <label>(c)=(a)-(b) Due</label>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <input type="text" min="0.00" step="any" class="form-control" placeholder="CAD$ 0." style="text-align:right;" disabled>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <label>(e)=(d)+(c) After Payment</label>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <input type="text" min="0.00" step="any" class="form-control" placeholder="CAD$ 0." style="text-align:right;" disabled>
        </div>
    </div>
    <!--Reason for payment-->
    <div class="row top-margin">
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <label>Reason For Payment</label>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <select class="form-control" data-toggle="tooltip" title="Select one">
                <option>New Reservation</option>
                <option>Confirm Reservation</option>
                <option>Check In</option>
                <option>Pay Amount Due</option>
                <option>Extend Reservation</option>
                <option>Other Services - Specify As Comment</option>
            </select>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <label>Received by (Staff Logged In)</label>
        </div>
        <div class="col-sm-6 col-xs-12 form-top-margin">
            <input type="text" class="form-control" placeholder="Tim Burton" disabled />
        </div>
    </div>
    <!-- Payment method-->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <label>Payment Method</label>
            </div>
            <div class="col-sm-4 col-xs-12 form-top-margin">
                <select class="form-control">
                    <option>Credit Card</option>
                    <option>Cash</option>
                    <option>Check</option>
                </select>
            </div>
            <div class="col-sm-1 col-xs-12 form-top-margin">
                <label>Date</label>
            </div>
            <div class="col-sm-4 col-xs-12 form-top-margin">
                @{  var dateAndTime = DateTime.Now;}
                <input type="text" class="form-control" placeholder="@dateAndTime.ToString("MMM/dd/yyyy")" disabled />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6 col-xs-12 form-top-margin">

                <select class="form-control">
                    <option>Credit Card Receipt Number:</option>
                    <option>Cash Deposit Receipt Number:</option>
                    <option>Check Bank and Number:</option>
                </select>

            </div>
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <input type="text" class="form-control" placeholder="Type reference # used to track the payment" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-sm-2 col-xs-12 form-top-margin">
                <label>Comments</label>
            </div>
            <div class="col-sm-10 col-xs-12 form-top-margin">
                <textarea class="form-control" rows="2"></textarea>
            </div>
            <div class="col-sm-6 col-sm-push-6 col-xs-12 form-top-margin">
                <button class="btn btn-block btn-default">
                    <span class="col-xs-1 glyphicon glyphicon-ok"></span>
                    <span class="col-xs-1 glyphicon glyphicon-print"></span>
                    <span class="col-xs-9">Confirm Payment</span>
                </button>
            </div>
        </div>
    </div>
</div>
