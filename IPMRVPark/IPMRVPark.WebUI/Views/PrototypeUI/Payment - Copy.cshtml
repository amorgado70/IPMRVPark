@{
    ViewBag.Title = "Payments & Refunds";
    ViewBag.PageTitle = "New Payment";
}

@Html.ActionLink("Home", "Menu", "PrototypeUI")
<span class="glyphicon glyphicon-chevron-right"></span>
Payments & Refunds
<span class="glyphicon glyphicon-chevron-right"></span>
@Html.ActionLink("New Payment", "Payment", "PrototypeUI")

<!-- New Payment -->
<div class="container-fluid">
    <!-- Customer -->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <label>
                    <span class="col-xs-2 glyphicon glyphicon-search"></span>
                    <span class="col-xs-9">By Name</span>
                </label>
            </div>
            <div class="col-sm-5 col-xs-12 form-top-margin" data-toggle="tooltip" title="Filter, search and select">
                <select class="form-control">
                    <option>Customer Full Name</option>
                    <option>All Names - No Filter</option>
                    @for (int i = 0; i < 8; i++)
                    {
                        <option>Mary Denver Holtz @i</option>
                    }
                </select>
            </div>
            <div class="col-sm-1 col-xs-12 form-top-margin">
                <label>Phone</label>
            </div>
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <input type="text" class="form-control" placeholder="(519) 888-3333">
            </div>
        </div>
    </div>
    <!-- List of sites -->
    <div class="row top-margin">
        <div class="col-sm-8 col-sm-push-4 col-xs-12" data-toggle="tooltip" title="Click To Expand/Collapse">
            <button class="btn btn-block btn-default" data-toggle="collapse" data-target="#sitesCustomer">
                <span class="col-xs-1 glyphicon glyphicon-list"></span>
                <span class="col-xs-9">List All Sites For This Customer &nbsp;<span class="caret"></span></span>
            </button>
        </div>
    </div>
    <div id="sitesCustomer" class="col-xs-12">
        <div class="col-xs-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Site</th>
                        <th>Arrival</th>
                        <th>Status</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>A-21</td>
                        <td>160221</td>
                        <td style="color:gray">Reserved/Already Paid</td>
                        <td style="color:gray">5,420.00</td>
                        <td class="dropdown">
                            <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
                                Action
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="#"><span class="glyphicon glyphicon-info-sign"></span>&nbsp; See Reservation Details</a></li>
                                <li><a href="#"><span class="glyphicon glyphicon-pencil"></span>&nbsp; Edit Reservation</a></li>
                                <li><a href="#"><span class="glyphicon glyphicon-erase"></span>&nbsp; Cancel Reservation</a></li>
                            </ul>
                        </td>
                    </tr>
                    <tr>
                        <td>A-23</td>
                        <td>160221</td>
                        <td style="font-weight:bold">Selected/Not Paid Yet</td>
                        <td style="font-weight:bold">3,045.</td>
                        <td class="dropdown">
                            <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
                                Action
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="#"><span class="glyphicon glyphicon-info-sign"></span>&nbsp; See Reservation Details</a></li>
                                <li><a href="#"><span class="glyphicon glyphicon-pencil"></span>&nbsp; Edit Reservation</a></li>
                                <li><a href="#"><span class="glyphicon glyphicon-erase"></span>&nbsp; Cancel Reservation</a></li>
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- List of all payments from this customer -->
    <div class="row top-margin">
        <div class="col-sm-8 col-sm-push-4 col-xs-12" data-toggle="tooltip" title="Click To Expand/Collapse">
            <button class="btn btn-block btn-default" data-toggle="collapse" data-target="#accountCustomer">
                <span class="col-xs-1 glyphicon glyphicon-list"></span>
                <span class="col-xs-9">List Previous Payments From This Customer &nbsp;<span class="caret"></span></span>
            </button>
        </div>
    </div>
    <div id="accountCustomer" class="col-xs-12 collapse">
        <table class="table">
            <thead>
                <tr>
                    <th>Site</th>
                    <th>Reason For Payment</th>
                    <th>Date</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>A-21</td>
                    <td>New reservation</td>
                    <td>02/05/2016</td>
                    <td>$ 2,500.00</td>
                </tr>
            </tbody>
        </table>
    </div>
    <!-- Account Balance for this customer -->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <label>Account Balance For This Customer</label>
            </div>
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <input type="text" min="0.00" step="any" class="form-control" placeholder="CAD$ 3,045." style="text-align:right" disabled>
            </div>
        </div>
    </div>
    <!-- Payment-->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <label>Payment Amount</label>
            </div>
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <input type="text" min="0.00" step="any" class="form-control" placeholder="CAD$ 3,045." style="text-align:right">
            </div>
        </div>

        <div class="form-group">
            <div class="radio-inline col-xs-12">
                <label class="radio-inline"><input type="radio" name="optradio" checked onClick="setPayment()">Amount To Receive</label>
                <label class="radio-inline"><input type="radio" name="optradio" onClick="setRefund()">Amount To Refund</label>
            </div>
        </div>
        <div id="text"></div>
        <script type="text/javascript">
            function setPayment() {
                document.getElementById("textMethod").innerHTML = 'Payment';
                document.getElementById("textStaff").innerHTML = 'Received';
                document.getElementById("textBalance").innerHTML = 'Payment';
                document.getElementById("textConfirm").innerHTML = 'Payment';
            }
            function setRefund() {
                document.getElementById("textMethod").innerHTML = 'Refund';
                document.getElementById("textStaff").innerHTML = 'Paid';
                document.getElementById("textBalance").innerHTML = 'Refund';
                document.getElementById("textConfirm").innerHTML = 'Refund';
            }
        </script>

        <div class="form-group">
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <label>Reason For Transaction</label>
            </div>
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <input type="text" class="form-control" placeholder="New Site Reservation / Cancel Site Reservation" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <label><span id="textStaff">Received</span> by (Staff Logged In)</label>
            </div>
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <input type="text" class="form-control" placeholder="Tim Burton" disabled />
            </div>
        </div>
    </div>
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <label><span id="textMethod">Payment</span> Method</label>
            </div>
            <div class="col-sm-4 col-xs-12 form-top-margin">
                <select class="form-control">
                    <option>Credit Card</option>
                    <option>Cash</option>
                    <option>Check</option>
                </select>
            </div>
            <div class="col-sm-1 col-xs-12 form-top-margin">
                <label>Date</label>
            </div>
            <div class="col-sm-4 col-xs-12 form-top-margin">
                @{DateTime MyDate = DateTime.Now;}
                <input type="text" class="form-control" placeholder="@MyDate" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <label>Transaction Number</label>
            </div>
            <div class="col-sm-9 col-xs-12 form-top-margin">
                <input type="text" class="form-control" placeholder="Check Number - Credit Card Receipt Number - Cash Deposit Number" />
            </div>
        </div>
    </div>
    <!-- Account Balance for this customer -->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <label>Customer's Account Balance After <span id="textBalance">Payment</span></label>
            </div>
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <input type="text" min="0.00" step="any" class="form-control" placeholder="CAD$ 0.00" style="text-align:right" disabled>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <div class="col-sm-2 col-xs-12 form-top-margin">
                <label>Comments</label>
            </div>
            <div class="col-sm-10 col-xs-12 form-top-margin">
                <textarea class="form-control" rows="2"></textarea>
            </div>
            <div class="col-xs-12 form-top-margin">
                <button class="btn btn-block btn-default">
                    <span class="col-xs-1 glyphicon glyphicon-ok"></span>
                    <span class="col-xs-9">Confirm <span id="textConfirm">Payment</span></span>
                </button>
            </div>
        </div>
    </div>
</div>