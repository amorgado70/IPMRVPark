@{
    ViewBag.Title = "Payments & Refunds";
    ViewBag.PageTitle = "Payment Search";
}

@Html.ActionLink("Home", "Home", "PrototypeUI")
<span class="glyphicon glyphicon-chevron-right"></span>
Payments & Refunds
<span class="glyphicon glyphicon-chevron-right"></span>
@Html.ActionLink("Search Payment", "PaymentSearch", "PrototypeUI")

<!-- Search Payment -->
<div class="container-fluid">
    <!-- Customer -->
    <div class="row top-margin">
        <div class="form-group">
            <div class="form-group">
                <div class="radio-inline col-sm-6 col-xs-12 form-top-margin">
                    <label class="radio-inline"><input type="radio" name="optradio" checked onClick="setAll()">All</label>
                    <label class="radio-inline"><input type="radio" name="optradio" onClick="setRefund()">Payments</label>
                    <label class="radio-inline"><input type="radio" name="optradio" onClick="setRefund()">Refunds</label>
                </div>
                <div class="col-sm-6 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" placeholder="Reason For Payment Or Refund" />
                </div>
            </div>
            <div class="col-sm-2 col-xs-12 form-top-margin">
                <label>
                    <span class="col-xs-3 glyphicon glyphicon-search"></span>
                    <span class="col-xs-3">Amount</span>
                </label>
            </div>
            <div class="col-sm-1 col-xs-4 form-top-margin">
                From
            </div>
            <div class="col-sm-2 col-xs-8 form-top-margin">
                <input type="text" class="form-control" placeholder="0.00" />
            </div>
            <div class="col-sm-1 col-xs-4 form-top-margin">
                Till
            </div>
            <div class="col-sm-2 col-xs-8 form-top-margin">
                <input type="text" class="form-control" placeholder="8,000.00" />
            </div>
            <div class="col-sm-1 col-xs-4 form-top-margin">
                Date
            </div>
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <input type="date" class="form-control" placeholder="05/05/20" />
            </div>
        </div>
    </div>
    <!-- Customer -->
    <div class="row">
        <div class="form-group">
            <div class="col-sm-2 col-xs-12 form-top-margin">
                <label>
                    <span class="col-xs-3 glyphicon glyphicon-search"></span>
                    <span class="col-xs-3">Customer</span>
                </label>
            </div>
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <input type="text" class="form-control" placeholder="Full Name" />
            </div>
            <div class="col-sm-4 col-xs-12 form-top-margin">
                <input type="text" class="form-control" placeholder="Phone Number" />
            </div>
            <div class="col-sm-12 col-xs-12 form-top-margin">
                <input type="text" class="form-control" placeholder="e-mail" />
            </div>
        </div>
    </div>
    <!-- RV Site Tag-->
    <div class="row">
        <div class="form-group">
            <div class="col-sm-2 col-xs-12 form-top-margin">
                <label>
                    <span class="col-xs-3 glyphicon glyphicon-search"></span>
                    <span class="col-xs-3">Site</span>
                </label>
            </div>
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <input type="text" class="form-control" placeholder="Name" />
            </div>
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <select class="form-control">
                    <option>All Types</option>
                    <option>25x40 30 amps lots</option>
                    <option>25x40 15 amps lots</option>
                    <option>30x45 15 amps lots</option>
                </select>
            </div>
            <div class="col-sm-4 col-xs-12 form-top-margin">
                <select class="form-control">
                    <option>All Status</option>
                    <option>UnPaid</option>
                    <option>Paid</option>
                </select>
            </div>
        </div>
    </div>
    <!-- List of other sites reserved for this same customer -->
    <div class="row top-margin">
        <div class="col-xs-12">
            <span class="col-xs-1 glyphicon glyphicon-list"></span>
            List Of Payments and Refunds That Match The Search Criteria
        </div>
    </div>
    <div class="col-xs-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Sites</th>
                    <th>Total<br />Paid</th>
                    <th>Current<br />Balance</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Homer Watson</td>
                    <td>A-32, A-31, W-02</td>
                    <td style="text-align:left;">875.00</td>
                    <td style="text-align:left;">0.00</td>
                    <td class="dropdown">
                        <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
                            Action
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="#"><span class="glyphicon glyphicon-info-sign"></span>&nbsp; See Customer Details</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp; Add a Payment</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp; Add a Refund</a></li>
                        </ul>
                    </td>
                </tr>
                <tr>
                    <td>John Macintosh</td>
                    <td>E-52, E-53, F-52</td>
                    <td style="text-align:left;">2875.00</td>
                    <td style="text-align:left;">0.00</td>
                    <td class="dropdown">
                        <button class="btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
                            Action
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="#"><span class="glyphicon glyphicon-info-sign"></span>&nbsp; See Customer Details</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp; Add a Payment</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp; Add a Refund</a></li>
                        </ul>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

