        </div>
        <div class="col-sm-1">
            Item Total
        </div>
    </div>
    @for (int i = 2; i < 8; i++)
            {
        <div class="row" style="padding:5px; background-color:#EEEECC;">
            <div class="col-sm-1" style="margin-top:12px;">
                @i
            </div>
            <div class="col-sm-1" style="margin-top:12px;">
                E - @i @i
            </div>
            <div class="col-sm-2" style="margin-top:12px;">
