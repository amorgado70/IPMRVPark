<div class="row" style="padding-bottom: 1em;">
    <div class="col-sm-1" style="margin-left:-1em; margin-right:1em; font-size: 2em; font-weight:500;">Sites</div>
    <div class="col-sm-1">
        <span class="glyphicon glyphicon-list" data-toggle="collapse" data-target="#reservationitemlist" style="font-size:2.5em;"></span>
    </div>
    <div class="col-sm-6"></div>
    <div class="col-sm-4">
        <button type="button" class="btn btn-block" style="margin-top:2px;">Edit Selected Item/Site</button>
    </div>
</div>
<div class="row" style="background-color:#EEEECC;">
    <div class="form-group col-sm-2">
        <label>Filter RV site:</label>
        <input type="text" class="form-control" placeholder="A-21">
    </div>
    <div class="form-group col-sm-2">
        <label>Select RV site:</label>
        <select class="form-control">
            @for (int i = 20; i < 36; i++)
            {
                <option>A - @i</option>
            }
        </select>
    </div>
</div>
<div class="row" style="background-color:#EEEECC;">
    <div class="form-group col-sm-3">
        <label>Start Date</label>
        <input type="date" class="form-control">
    </div>
    <div class="form-group col-sm-3">
        <label>End Date</label>
        <input type="date" class="form-control">
    </div>
    <div class="form-group col-sm-2">
        <label>Item total:</label>
