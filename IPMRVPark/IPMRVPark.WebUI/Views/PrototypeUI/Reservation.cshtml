@{
    ViewBag.Title = "Site Reservation";
}

@Html.ActionLink("Home", "Home", "PrototypeUI")
<span class="glyphicon glyphicon-chevron-right"></span>
@Html.ActionLink("New Site Reservation", "Reservation", "PrototypeUI")

<!-- New Reservation-->
<div class="container-fluid">
    <!-- Not Logged In Message -->
    <div class="row top-margin">
        <div class="h4 text-center col-xs-12">
            Must Be Logged In The System To Reserve a Site
        </div>
    </div>
    <!-- RV Site Dates-->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <label>Arrival Date</label>
            </div>
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <input type="date" class="form-control">
            </div>
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <label>Departure Date</label>
            </div>
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <input type="date" class="form-control">
            </div>
        </div>
    </div>
    <!-- RV Site Tag-->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-1 col-xs-12 form-top-margin">
                <label>Site</label>
            </div>
            <div class="col-sm-2 col-xs-12 form-top-margin">
                <select class="form-control">
                    <option>Name</option>
                    @for (int i = 20; i < 36; i++)
                    {
                        <option>A - @i</option>
                    }
                </select>
            </div>
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <select class="form-control">
                    <option>Type</option>
                    <option>25x40 30 amps lots</option>
                    <option>25x40 15 amps lots</option>
                    <option>30x45 15 amps lots</option>
                </select>
            </div>
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <button class="btn btn-block btn-default">
                    <span class="col-xs-2 glyphicon glyphicon-map-marker"></span>
                    @Html.ActionLink("IPM Event Map Display", "EventMap", "PrototypeUI", null, new { @class = "col-xs-8" })
                    <span class="col-xs-2 glyphicon glyphicon-chevron-right"></span>
                </button>
            </div>
        </div>
    </div>
    <!-- Total amount for this site reservation -->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <label>Total Amount For This Site Reservation</label>
            </div>
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <input type="text" min="0.00" step="any" class="form-control" placeholder="CAD$ 1,345.51" style="text-align:right" disabled>
            </div>
        </div>
    </div>
    <!-- Customer -->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-2 col-xs-12 form-top-margin">
                <label>Customer</label>
            </div>
            <div class="col-sm-4 col-xs-12 form-top-margin">
                <select class="form-control">
                    <option>Select By Name</option>
                    @for (int i = 0; i < 8; i++)
                    {
                        <option>Mary Denver Holtz @i</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <button class="btn btn-block btn-default">
                    <span class="col-xs-2 glyphicon glyphicon-plus-sign"></span>
                    @Html.ActionLink("Register New Customer", "Customer", "PrototypeUI", null, new { @class = "col-xs-8" })
                    <span class="col-xs-2 glyphicon glyphicon-chevron-right"></span>
                </button>
            </div>
        </div>
    </div>
    <!-- Confirmation -->
    <div class="row">
        <div class="form-group">
            <div class="col-sm-3 col-xs-12 form-top-margin">
                <label>Reservation Summary</label>
            </div>
            <div class="col-sm-9 col-xs-12 form-top-margin">
                <textarea class="form-control" rows="2" disabled>Site X-88, Mary Denver, Jun-21/Jun-25, CAD$ 2,850.00</textarea>
            </div>
            <div class="col-xs-12 form-top-margin">
                <button class="btn btn-block btn-default">
                    <span class="col-xs-1 glyphicon glyphicon-ok"></span>
                    <span class="col-xs-9">Confirm Site Reservation</span>
                </button>
            </div>
        </div>
    </div>
    <!-- Repeat Reservation -->
    <div class="row top-margin">
        <div class="col-xs-12">
            <button class="btn btn-block btn-default">
                <span class="col-xs-1 glyphicon glyphicon-plus-sign"></span>
                <span class="col-xs-9">Add More Site(s) For This Customer</span>
            </button>
        </div>
    </div>
    <!-- List of other sites reserved for this same customer -->
    <div class="row top-margin">
        <div class="col-xs-12">
            <button class="btn btn-block btn-default" data-toggle="collapse" data-target="#sitesCustomer" ">
                <div class="col-xs-9">List All Sites - This Customer</div>
                <div class="col-xs-1">
                    <span class="glyphicon glyphicon-chevron-down"></span>
                    <span class="glyphicon glyphicon-chevron-up"></span>
                </div>
            </button>
        </div>
    </div>
    <div id="sitesCustomer" class="col-xs-12 collapse">
        <table class="table">
            <thead>
                <tr>
                    <th>Site</th>
                    <th>Arrival</th>
                    <th>Total</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>A-21</td>
                    <td>160221</td>
                    <td>$ 2,400.00</td>
                    <td>Paid</td>
                </tr>
            </tbody>
            <tbody>
                <tr>
                    <td>A-23</td>
                    <td>160221</td>
                    <td>$ 2,400.00</td>
                    <td>Unpaid</td>
                </tr>
            </tbody>
        </table>
    </div>
    <!-- Account Balance for this customer -->
    <div class="row top-margin">
        <div class="form-group">
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <label>Account Balance For This Customer</label>
            </div>
            <div class="col-sm-6 col-xs-12 form-top-margin">
                <input type="text" min="0.00" step="any" class="form-control" placeholder="CAD$ 3,045.51" style="text-align:right" disabled>
            </div>
        </div>
    </div>
    <!-- Payment-->
    <div class="row top-margin">
        <div class="col-xs-12">
            <button class="btn btn-block btn-default">
                <span class="col-xs-1 glyphicon glyphicon-usd"></span>
                @Html.ActionLink("Proceed To Payment", "Payment", "PrototypeUI", null, new { @class = "col-xs-9" })
            </button>
        </div>
    </div>
</div>
