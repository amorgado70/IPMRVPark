@model IPMRVPark.Models.provincecode

@{
    ViewBag.Title = "ProvinceCreate";
}

<h2>MVC COUNTRYCODE VIEWBAG EXAMPLE</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>provincecode</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.code)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.code)
            @Html.ValidationMessageFor(model => model.code)
        </div>

        <h4 style="color: coral;">In the viewbag example, user must select a country name in the dropdownlist</h4>

        <label>
            Country
        </label>
        <div style="width: 25%;">
            @Html.DropDownListFor(model => model.countryCode,
                new SelectList(ViewBag.Country, "code", "name"),
                "Select Country",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.countryCode, "", new { @class = "text-danger" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.createDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.createDate)
            @Html.ValidationMessageFor(model => model.createDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.lastUpdate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.lastUpdate)
            @Html.ValidationMessageFor(model => model.lastUpdate)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "ProvinceIndex")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
