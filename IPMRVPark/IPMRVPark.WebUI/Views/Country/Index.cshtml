@model IEnumerable<IPMRVPark.Models.countrycode>

@{
    ViewBag.Title = "countrycodes Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="margin-top-10">countrycodes Index</h2>

<div class="container">
    <div class="row margin-top-10">
        <div class="col-md-7">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="col-md-9 col-xs-8 margin-top-10">
                    @Html.TextBox("SearchString", "countrycode name", new { id = "SearchString", @class = "form-control" })
                </div>
                <div class="col-md-1 col-xs-2 margin-top-10">
                    <button type="submit" class="btn btn-primary glyphicon glyphicon-search" />
                </div>
                <div class="col-md-1 col-xs-2 margin-top-10">
                    <a href="@Url.Action("Index", "countrycodes")" class="btn btn-primary glyphicon glyphicon-remove"></a>
                </div>
            }
        </div>
        <div class="col-md-5">
            <a href="@Url.Action("Create", "countrycodes")" class="btn btn-primary pull-right col-md-4 col-xs-12 margin-top-10">
                Create New &nbsp;
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <img class="img-responsive img-circle img-center countrycode-heading" src="@Html.DisplayFor(modelItem => item.name)" alt="">
                    </div>
                    <div class="panel-body countrycode-body">
                        <div class="col-xs-12">
                            <h3>Code: @Html.DisplayFor(modelItem => item.code)</h3>
                            <h4>Name: @Html.DisplayFor(modelItem => item.name)</h4>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium veniam exercitationem expedita laborum at voluptate. Labore, voluptates totam at aut nemo deserunt rem magni pariatur quos perspiciatis atque eveniet unde.</p>
                        </div>
                        <div class="col-xs-12">
                            <a href="@Url.Action("Details", "countrycodes", new { id = item.code })" class="btn btn-primary col-md-12 col-xs-12 margin-top-10">
                                Details
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            </a>
                            <a href="@Url.Action("Edit", "countrycodes", new { id = item.code })" class="btn btn-primary col-md-4 col-xs-12 margin-top-10">
                                Edit&nbsp;
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <div class="col-md-4 margin-top-10"></div>
                            <a href="@Url.Action("Delete", "countrycodes", new { id = item.code })" class="btn btn-primary col-md-4 col-xs-12 margin-top-10">
                                Remove
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
