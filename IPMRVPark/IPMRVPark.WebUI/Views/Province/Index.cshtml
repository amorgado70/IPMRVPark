@model  IEnumerable<IPMRVPark.Models.province_view>

@{
    ViewBag.Title = "Province List";
    ViewBag.PageTitle = "Province List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="top-margin">
    <p>
        <a href="@Url.Action("CreateProvince", "Province")" class="btn btn-default margin-top-10" style="margin-left:10px">
            Add Province
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        </a>
    </p>
</div>

<div class="container-fluid">
    <div class="row top-margin" style="margin-left:5px">
        <table>
            <tr>
                <th>
                    <label>Province Code</label>
                </th>
                <th>
                    <label>Province Name</label>
                </th>
                <th>
                    <label>Country Code</label>
                </th>
                <th>
                    <label>Country Name</label>
                </th>
                <th>
                    <label>Actions</label>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => item.provinceCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.provinceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.countryCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.countryName)
                    </td>
                    <td>
                        <a href="@Url.Action("ProvinceDetails", "Province", new { id = item.provinceCode })" class="btn btn-default margin-top-10">
                            Details
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("EditProvince", "Province", new { id = item.provinceCode })" class="btn btn-default margin-top-10">
                            Edit&nbsp;
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>