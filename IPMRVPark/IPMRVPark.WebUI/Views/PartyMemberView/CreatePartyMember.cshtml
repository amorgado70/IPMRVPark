@model IPMRVPark.Models.partymember_view

@{
    ViewBag.Title = "Add Party Member";
    ViewBag.PageTitle = "Add Party Member";
}
@Html.ActionLink("Home", "Menu", "PrototypeUI")
<span class="glyphicon glyphicon-chevron-right"></span>
Maintenance
<span class="glyphicon glyphicon-chevron-right"></span>
@Html.ActionLink("Add Party Member", "CreatePartyMember", "PartyMemberView")

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<div class="container-fluid">
    <fieldset>
        <legend></legend>
        <div class="row top-margin">
            <div class="form-group">
                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>First Name :</label>
                </div>
                <div class="col-sm-4 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="enter first name here ..." />
                    @Html.ValidationMessageFor(model => model.firstName)
                </div>

                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>Last Name :</label>
                </div>
                <div class="col-sm-4 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="enter last name here ..." />
                    @Html.ValidationMessageFor(model => model.lastName)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>Email :</label>
                </div>
                <div class="col-sm-10 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" id="email" name="email" placeholder="enter email address here ..." />
                    @Html.ValidationMessageFor(model => model.email)
                </div>
            </div>
        </div>
        <div class="row top-margin">
            <div class="form-group">
                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>Main Phone :</label>
                </div>
                <div class="col-sm-4 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" id="mainPhone" name="mainPhone" placeholder="(555) 333-4444" />
                    @Html.ValidationMessageFor(model => model.mainPhone)
                </div>
                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>Cell Phone :</label>
                </div>
                <div class="col-sm-4 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" id="cellPhone" name="cellPhone" placeholder="(555) 333-4444" />
                    @Html.ValidationMessageFor(model => model.cellPhone)
                </div>
            </div>
        </div>
        <div class="row top-margin">
            <div class="form-group">
                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>Pet Info. :</label>
                </div>
                <div class="col-sm-10 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" id="petDescription" name="petDescription" placeholder="enter pet description here..." />
                    @Html.ValidationMessageFor(model => model.petDescription)
                </div>
            </div>
        </div>
        <div class="row top-margin">
            <div class="form-group">
                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>Comments :</label>
                </div>
                <div class="col-sm-10 col-xs-12 form-top-margin">
                    <textarea class="form-control" id="comments" name="comments" rows="2" placeholder="enter comments here..."></textarea>
                    @Html.ValidationMessageFor(model => model.comments)
                </div>
            </div>
        </div>
        <div class="row top-margin">
            <div class="form-group">
                <div class="col-sm-6 col-sm-push-6 col-xs-12 form-top-margin">
                    <button type="submit" class="btn btn-block btn-default">
                        <span class="col-xs-1 glyphicon glyphicon-ok"></span>
                        <span class="col-xs-9">Confirm Party Member</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="row top-margin">
            <div class="form-group">
                <div class="col-sm-6 col-sm-push-6 col-xs-12 form-top-margin">
                    <a href="@Url.Action("Index", "PartyMemberView")" class="btn btn-block btn-default">
                        <span class="glyphicon glyphicon-map-marker"></span>
                        <span>Back to List</span>
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>
        </div>
    </fieldset>
</div>
    
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
