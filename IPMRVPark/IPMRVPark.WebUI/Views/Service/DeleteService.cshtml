@model IPMRVPark.Models.service

@{
    ViewBag.Title = "Remove Service";
    ViewBag.PageTitle = "Remove Service";
}
@Html.ActionLink("Home", "Menu", "Login")
<span class="glyphicon glyphicon-chevron-right"></span>
Maintenance
<span class="glyphicon glyphicon-chevron-right"></span>
@Html.ActionLink("Remove Service", "DeleteService", "Service")

<h3>Are you sure you want to remove this?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<div class="container-fluid">
    <fieldset>
        <legend></legend>
        <div class="row top-margin">
                <div class="display-label col-sm-2 col-xs-12 form-top-margin">
                    <label>ID</label>
                </div>
                <div class="display-field col-sm-3 col-xs-12 form-top-margin">
                    @Html.DisplayFor(model => model.ID)
                </div>
            <div class="display-label col-sm-2 col-sm-push-1 col-xs-12 form-top-margin">
                <label>Description</label>
            </div>
            <div class="display-field col-sm-3 col-sm-push-1 col-xs-12 form-top-margin">
                @Html.DisplayFor(model => model.description)
            </div>
        </div>
        <div class="row top-margin">
                <div class="display-label col-sm-2 col-xs-12 form-top-margin">
                    <label>Create Date</label>
                </div>
                <div class="display-field col-sm-3 col-xs-12 form-top-margin">
                    @Html.DisplayFor(model => model.createDate)
                </div>
            <div class="display-label col-sm-2 col-sm-push-1 col-xs-12 form-top-margin">
                <label>Last Update</label>
            </div>
                <div class="display-field col-sm-3 col-sm-push-1 col-xs-12 form-top-margin">
                    @Html.DisplayFor(model => model.lastUpdate)
                </div>
        </div>
        <div class="row top-margin">
                <div class="editor-label col-sm-5 col-sm-push-1 col-xs-12 form-top-margin">
                    <button type="submit" class="btn btn-block btn-default">
                        <span class="col-xs-1 glyphicon glyphicon-remove"></span>
                        <span class="col-xs-9">Confirm Service Remove</span>
                    </button>
                </div>
                <div class="editor-label col-sm-5 col-sm-push-1 colxs-12 form-top-margin">
                    <a href="@Url.Action("Index", "Service")" class="btn btn-block btn-default btn-mylink pagination-centered">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span>Back to List</span>
                    </a>
                </div>
        </div>
    </fieldset>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
        }

