@model IEnumerable<IPMRVPark.Models.service>

@{
    ViewBag.Title = "Service Index";
    ViewBag.PageTitle = "Service List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="top-margin">
    <p>
        <a href="@Url.Action("CreateService", "Service")" class="btn btn-default margin-top-10" style="margin-left:10px">
            Add Service
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        </a>
    </p>
</div>
    <div class="container-fluid">
        <div class="row top-margin" style="margin-left:5px">
            <table>
                <tr>
                    <th>
                        <label style="margin:10px">ID</label>
                    </th>
                    <th>
                        <label style="margin:10px">Description</label>
                    </th>
                    <th>
                        <label style="margin:10px">Actions</label>
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description, new { style = "margin: 10px;" })
                        </td>
                        <td>
                            <a href="@Url.Action("ServiceDetails", "Service", new { id = item.ID })" class="btn btn-default margin-top-10">
                                Details
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            </a>
                            <a href="@Url.Action("EditService", "Service", new { id = item.ID })" class="btn btn-default margin-top-10">
                                Edit&nbsp;
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <a href="@Url.Action("DeleteService", "Service", new { id = item.ID })" class="btn btn-default margin-top-10">
                                Remove
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
