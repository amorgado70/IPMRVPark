@model IPMRVPark.Models.partymember_view

@{
    ViewBag.Title = "Party Member Details";
    ViewBag.PageTitle = "Party Member Details ";
}
@Html.ActionLink("Home", "Menu", "Login")
<span class="glyphicon glyphicon-chevron-right"></span>
Maintenance
<span class="glyphicon glyphicon-chevron-right"></span>
@Html.ActionLink("Party Member Details", "PartyMemberDetails", "PartyMemberView")

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<div class="container-fluid">
    <fieldset>
        <legend></legend>
        @Html.HiddenFor(model => model.id)
        <div class="row top-margin">
                <div class="display-label col-sm-2 col-xs-12 form-top-margin">
                    <label>First Name</label>
                </div>
                <div class="display-field col-sm-3 col-xs-12 form-top-margin">
                    @Html.DisplayFor(model => model.firstName)
                </div>
            <div class="display-label col-sm-2 col-sm-push-1 col-xs-12 form-top-margin">
                <label>Last Name</label>
            </div>
            <div class="display-field col-sm-3 col-sm-push-1 col-xs-12 form-top-margin">
                @Html.DisplayFor(model => model.lastName)
            </div>
        </div>
        <div class="row top-margin">
            <div class="display-label col-sm-2 col-xs-12 form-top-margin">
                <label>E-mail</label>
            </div>
            <div class="display-field col-sm-9 col-xs-12 form-top-margin">
                @Html.DisplayFor(model => model.email)
            </div>
        </div>
        <div class="row top-margin">
                <div class="display-label col-sm-2 col-xs-12 form-top-margin">
                    <label>Main Phone</label>
                </div>
                <div class="display-field col-sm-3 col-xs-12 form-top-margin">
                    @Html.DisplayFor(model => model.mainPhone)
                </div>
            <div class="display-label col-sm-2 col-sm-push-1 col-xs-12 form-top-margin">
                <label>Cell Phone</label>
            </div>
            <div class="display-field col-sm-3 col-sm-push-1 col-xs-12 form-top-margin">
                @Html.DisplayFor(model => model.cellPhone)
            </div>
        </div>
        <div class="row top-margin">
                <div class="display-label col-sm-2 col-xs-12 form-top-margin">
                    <label>Pet Info.</label>
                </div>
                <div class="display-field col-sm-3 col-xs-12 form-top-margin">
                    @Html.DisplayFor(model => model.petDescription)
                </div>

            <div class="display-label col-sm-2 col-sm-push-1 col-xs-12 form-top-margin">
                <label>Comments</label>
            </div>
                <div class="display-field col-sm-3 col-sm-push-1 vcol-xs-12 form-top-margin">
                    @Html.DisplayFor(model => model.comments)
                </div>
        </div>
        <div class="row top-margin">
                <div class="display-label col-sm-5 col-sm-push-1 col-xs-12 form-top-margin">
                    <a href="@Url.Action("EditPartyMember", "PartyMemberView", new { id = Model.id })" class="btn btn-block btn-default btn-mylink pagination-centered">
                        <span class="glyphicon glyphicon-edit"></span>
                        <span>Edit Party Member</span>
                    </a>
                </div>
                <div class="display-label col-sm-5 col-sm-push-1 colxs-12 form-top-margin">
                    <a href="@Url.Action("Index", "PartyMemberView")" class="btn btn-block btn-default btn-mylink pagination-centered">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span>Back to List</span>
                    </a>
                </div>
        </div>
    </fieldset>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
