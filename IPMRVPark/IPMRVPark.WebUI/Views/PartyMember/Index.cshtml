@model  IEnumerable<IPMRVPark.Models.partymember_view>

@{
    ViewBag.Title = "Party Member List";
    ViewBag.PageTitle = "Party Member List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="top-margin">
    <p>
        <a href="@Url.Action("CreatePartyMember", "PartyMemberView")" class="btn btn-default margin-top-10" style="margin-left:10px">
            Add Party Member
            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        </a>
    </p>
</div>
<div class="container-fluid">
    <div class="row top-margin" style="margin-left:5px">
        <table>
            <tr>
                <th>
                    <label>Full Name</label>
                </th>
                <th>
                    <label>Main Phone</label>
                </th>
                <th>
                   <label>Email</label>
                </th>
                <th>
                    <label>Cell Phone</label>
                </th>
                <th>
                    <label>Pet Description</label>
                </th>
                <th>
                    <label>Comments</label>
                </th>
                <th>
                    <label>Actions</label>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => item.fullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.mainPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.cellPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.petDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.comments)
                    </td>
                    <td>
                        <a href="@Url.Action("PartyMemberDetails", "PartyMemberView", new { id = item.id })" class="btn btn-default margin-top-10">
                            Details
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("EditPartyMember", "PartyMemberView", new { id = item.id })" class="btn btn-default margin-top-10">
                            Edit&nbsp;
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>