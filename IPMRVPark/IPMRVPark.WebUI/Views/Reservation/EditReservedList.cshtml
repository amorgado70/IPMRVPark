@model IEnumerable<IPMRVPark.Models.total_per_edititem_view>

<script type="text/javascript">
    $(document).ready(function () {
        $("#waitMsg").hide();// Hide wait message
    });
</script>


<div class="row form-top-margin">
    <div class="col-sm-2 col-xs-12 form-top-margin">
        <label>Customer</label>
    </div>
    <div class="col-sm-6 col-xs-12 form-top-margin">
        <div>@Model.First().fullName , Phone: @Model.First().mainPhone</div>
    </div>
</div>

<!-- List of selected sites -->
<div class="row form-top-margin">
    <div class="col-xs-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Site</th>
                    <th>Type</th>
                    <th>Check In</th>
                    <th>Check Out</th>
                    <th style="text-align:right;">Total</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
            {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.site)</td>
                        <td>@Html.DisplayFor(modelItem => item.siteType)</td>
                        <td>@item.checkInDate.ToString("ddd"), @item.checkInDate.ToString("dd") @item.checkInDate.ToString("MMM")</td>
                        <td>@item.checkOutDate.ToString("ddd"), @item.checkOutDate.ToString("dd") @item.checkOutDate.ToString("MMM")</td>
                        <td style="text-align:right;">@Html.DisplayFor(modelItem => item.amount)</td>
                    </tr>
                }
                <tr>
                    <td>Reservation Total</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="text-align:right;">@ViewBag.reservationAmount</td>
                </tr>
                <tr>
                    <td>Edit Total</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="text-align:right;">@ViewBag.totalAmount</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
