@model IPMRVPark.Models.staff_view

@{
    ViewBag.Title = "Add Staff";
    ViewBag.PageTitle = "Add Staff";
}
@Html.ActionLink("Home", "Menu", "Login")
<span class="glyphicon glyphicon-chevron-right"></span>
Maintenance
<span class="glyphicon glyphicon-chevron-right"></span>
@Html.ActionLink("Add Staff", "CreateStaff", "Staff")

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<div class="container-fluid">
    <fieldset>
        <legend></legend>
        <div class="row top-margin">
                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>First Name</label>
                </div>
                <div class="col-sm-4 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="enter first name here ..." />
                    @Html.ValidationMessageFor(model => model.firstName)
                </div>

                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>Last Name</label>
                </div>
                <div class="col-sm-4 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="enter last name here ..." />
                    @Html.ValidationMessageFor(model => model.lastName)
                </div>
                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>E-mail</label>
                </div>
                <div class="col-sm-10 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" id="email" name="email" placeholder="enter email address here ..." />
                    @Html.ValidationMessageFor(model => model.email)
                </div>
        </div>
        <div class="row top-margin">
                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>Main Phone</label>
                </div>
                <div class="col-sm-4 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" id="mainPhone" name="mainPhone" placeholder="(555) 333-4444" />
                    @Html.ValidationMessageFor(model => model.mainPhone)
                </div>
                <div class="col-sm-2 col-xs-12 form-top-margin">
                    <label>Role</label>
                </div>
                <div class="col-sm-4 col-xs-12 form-top-margin">
                    <input type="text" class="form-control" id="role" name="role" placeholder="enter role here..." />
                    @Html.ValidationMessageFor(model => model.role)
                </div>
        </div>

        <div class="row top-margin">
                <div class="col-sm-6 col-sm-push-6 col-xs-12 form-top-margin">
                    <button type="submit" class="btn btn-block btn-default">
                        <span class="col-xs-1 glyphicon glyphicon-ok"></span>
                        <span class="col-xs-9">Confirm Staff</span>
                    </button>
                </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-sm-push-6 col-xs-12 form-top-margin" data-toggle="tooltip" title="Go To">
                <a href="@Url.Action("Index", "Staff")" class="btn btn-block btn-default btn-mylink pagination-centered">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span>Back to List</span>
                </a>
            </div>
        </div>
    </fieldset>
</div>
    
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
