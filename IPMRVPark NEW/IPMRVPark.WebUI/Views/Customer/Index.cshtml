@model IEnumerable<IPMRVPark.Models.customer>

@{
    ViewBag.Title = "Customer Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="margin-top-10">Customer Index</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
                        <div>
                            <h3>Id: @Html.DisplayFor(modelItem => item.idCustomer) First Name: @Html.DisplayFor(modelItem => item.idAddress)</h3>
                            <a href="@Url.Action("Details", "Country", new { id = item.idCustomer })" class="btn btn-primary margin-top-10">
                                Details
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            </a>
                            <a href="@Url.Action("Edit", "Country", new { id = item.idCustomer })" class="btn btn-primary margin-top-10">
                                Edit&nbsp;
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <a href="@Url.Action("Delete", "Country", new { id = item.idCustomer })" class="btn btn-primary margin-top-10">
                                Remove
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                        </div>
        }
    </div>
</div>
